{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">

            <a href="/catalogue/new"><i class="fa-solid fa-plus align-left"></i></i></i></a>

            <p class="table"> Catalogue</p>

            <table class="table table-striped">
                
                
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Dur√©e</th>
                    <th scope="col">Voir plus</th>
                    
                 </tr>
                </thead>

                <tbody>
                {% for formation in formations %} 
                <tr>
                    <th>{{formation.getName()}}</th>
                    <th>{{formation.getDescription()}}</th>
                    <th>{%if formation.getDuration() is null %}0 {% else %} {{formation.getDuration().format("H:i:s")}} {% endif %}</th>

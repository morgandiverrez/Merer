{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}



{% block body %}
    <div class="container-fluid">
        <div class="corps mx-auto">
            <p class="display-6 no-wrap text-center mb-5"> Catalogue</p>
                <div class=" d-flex justify-content-center text-center align-center">
                    <div class="card" style="width: 18rem;">
                
                        <div class=" card-body ">
                            <h5 class="card-title">{{formation.getName()}}</h5>
                            <p class="card-text">{{formation.getDescription()}}</p>
                            <p class="card-text">OPG :{{formation.getOpg()}}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Code : {{formation.getCode()}}</li>
                            <li class="list-group-item">Pré-requis : {{formation.getPreRequis()}}</li>
                            <li class="list-group-item">Durée : {%if formation.getDuration() is null %}0 {% else %} {{formation.getDuration().format("H:i:s")}} {% endif %} </li>
                            <li class="list-group-item">PublicCible : {{formation.getPublicCible()}}</li>
                                                 
                            
                        </ul>
                        <div class="card-body">
                            <a href="/catalogue/edit/{{ formation.getId() }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="/catalogue/delete/{{ formation.getId()}}" class="card-link"><i class="fa-solid fa-trash-can"></i></a>
                            <a href="/catalogue/" class="card-link"><i class="fa-solid fa-list"></i></a>
                           
                        </div>
                    </div>
                </div>
 

            {# <div class="text-center">
                <a href="/chlidren/childrenToCamp/{{camp.campId}}"><button class="btn btn-success mt-3 mb-3"><i class = "fa text-light fa-plus-square me-2"></i>{{ button_label|default('Nouveau') }}</button></a>
            </div> #}

        </div>
    </div>


{% endblock %}
